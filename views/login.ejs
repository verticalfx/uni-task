<!doctype html>
<html>
  <head>
    <title>Login for <%=shopData.shopName%></title>
    <link rel="stylesheet" type="text/css" href="/main.css" />
  </head>
  <body>
    <h1>Login for <%=shopData.shopName%></h1>
    <% if (error) { %>
        <p style="color: red"><%= error %></p>
    <% } %>
    <form method="POST" action="loggedin">
        <p>Username: <input id="username" type="text" name="username"/></p>
        <p>Password: <input id="email" type="password" name="password"/></p>
        <input type="submit" value="Login" />
    </form>
  </body>
</html>
